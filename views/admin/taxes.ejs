<%- include('../partials/header') %>
    <%- include('../partials/sidebar') %>

        <div class="main-content">
            <div class="container animate-fade-in">
                <h1 class="page-title"><i class="fa-solid fa-percent"></i> Tax & Company Settings</h1>

                <% if (success_msg && success_msg.length> 0) { %>
                    <div class="alert alert-success">
                        <%= success_msg %>
                    </div>
                    <% } %>

                        <div class="settings-grid">
                            <div class="card">
                                <h2><i class="fa-solid fa-building"></i> Company Information</h2>
                                <form action="/admin/taxes" method="POST">
                                    <div class="form-group">
                                        <label class="form-label">Company Name</label>
                                        <input type="text" name="company_name" class="form-input"
                                            value="<%= settings.company_name || '' %>" placeholder="Your Company Name">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Company Address</label>
                                        <textarea name="company_address" class="form-input" rows="3"
                                            placeholder="Full company address for invoices"><%= settings.company_address || '' %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Company GST / Tax ID</label>
                                        <input type="text" name="company_gst" class="form-input"
                                            value="<%= settings.company_gst || '' %>"
                                            placeholder="e.g., 22AAAAA0000A1Z5">
                                    </div>

                                    <h2 style="margin-top: 2rem;"><i class="fa-solid fa-percent"></i> Tax Configuration
                                    </h2>
                                    <div class="form-group">
                                        <label class="form-label">Tax Name</label>
                                        <input type="text" name="tax_name" class="form-input"
                                            value="<%= settings.tax_name || 'GST' %>"
                                            placeholder="e.g., GST, VAT, Sales Tax">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Tax Rate (%)</label>
                                        <input type="number" step="0.01" name="tax_rate" class="form-input"
                                            value="<%= settings.tax_rate || '0' %>" placeholder="e.g., 18">
                                        <small class="text-secondary">Enter 0 to disable tax. Enter 18 for 18%
                                            tax.</small>
                                    </div>

                                    <button type="submit" class="btn btn-primary mt-4">
                                        <i class="fa-solid fa-save"></i> Save Settings
                                    </button>
                                </form>
                            </div>
                        </div>
            </div>
        </div>



            <%- include('../partials/footer') %>