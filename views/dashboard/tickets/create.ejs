<%- include('../../partials/header') %>
    <%- include('../../partials/sidebar') %>

        <div class="main-content">
            <div class="container animate-fade-in" style="max-width: 800px; margin: 0 auto;">
                <h1 class="page-title">Open Support Ticket</h1>

                <div class="card">
                    <form action="/dashboard/tickets/create" method="POST">
                        <div class="form-group">
                            <label class="form-label">Subject</label>
                            <input type="text" name="subject" class="form-input"
                                placeholder="Briefly describe your issue..." required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Message</label>
                            <textarea name="message" class="form-input" rows="8"
                                placeholder="Please provide details about your issue so we can help you faster."
                                required></textarea>
                        </div>

                        <div class="form-actions" style="display:flex; justify-content: flex-end; gap: 1rem;">
                            <a href="/dashboard/tickets" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit Ticket</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include('../../partials/footer') %>